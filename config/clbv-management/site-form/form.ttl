@prefix form: <http://lblod.data.gift/vocabularies/forms/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix mu: <http://mu.semte.ch/vocabularies/core/>.
@prefix fieldGroups: <http://data.lblod.info/field-groups/>.
@prefix fields: <http://data.lblod.info/fields/>.
@prefix displayTypes: <http://lblod.data.gift/display-types/>.
@prefix ext: <http://mu.semte.ch/vocabularies/ext/>.
@prefix schema: <http://schema.org/>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.

ext:mainFieldGroup a form:FieldGroup.

ext:formDefinition a form:Form;
    form:hasFieldGroup ext:mainFieldGroup.

ext:corePropertyGroup a form:PropertyGroup;
    sh:description "Parent property group, used to group fields and property groups together";
    sh:name "Core Data";
    sh:order 2.

# Dropdown
ext:siteType a form:Field;
    sh:name "Site Type";
    sh:order 3;
    sh:path ext:siteTypeValue;
    form:options """{"conceptScheme":"http://example-concept-schemes/concept-schemes/sitetypes","searchEnabled":false}""";
    form:displayType displayTypes:conceptSchemeSelector;
    form:validations [
        a form:RequiredConstraint;
        form:grouping form:Bag;
        sh:path ext:siteTypeValue;
        sh:resultMessage "Choose a site Type."
    ];
    sh:group ext:corePropertyGroup.

ext:mainFieldGroup form:hasField ext:siteType.

ext:primaryAddress a form:Field;
    sh:name "Primary Correspondence Address";
    sh:order 4;
    sh:path ext:primairValue;
    form:options """{"conceptScheme":"http://example-concept-schemes/concept-schemes/primaircorrespondetie","searchEnabled":false}""";
    form:displayType displayTypes:conceptSchemeRadioButtons;
    sh:group ext:corePropertyGroup.
ext:mainFieldGroup form:hasField ext:primaryAddress.

ext:contactPropertyGroup a form:PropertyGroup;
    sh:description "Parent property group, used to group fields and property groups together";
    sh:name "Contact Information";
    sh:order 700.

#Countries
ext:countries a form:Field;
    sh:name "Countries";
    sh:order 1;
    sh:path ext:countryValue;
    form:options """{"conceptScheme":"http://example-concept-schemes/concept-schemes/countries","searchEnabled":false}""";
    form:displayType displayTypes:conceptSchemeSelector;
        form:validations [
        a form:RequiredConstraint;
        form:grouping form:Bag;
        sh:path ext:countryValue;
        sh:resultMessage "Please choose a country."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:countries.

#Street
ext:street a form:Field;
    sh:name "Street";
    sh:order 2;
    sh:path ext:StreetValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:RequiredConstraint;
        form:grouping form:Bag;
        sh:path ext:StreetValue;
        sh:resultMessage "Please enter a valid address."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:street.


# House Number
ext:houseNumber a form:Field;
    sh:name "House Number";
    sh:order 20;
    sh:path ext:housenumberValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:RequiredConstraint;
        form:grouping form:Bag;
        sh:path ext:housenumberValue;
        sh:resultMessage "Please enter a valid address."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:houseNumber.


# Apartment Number
ext:boxNumber a form:Field;
    sh:name "Box Number";
    sh:order 30;
    sh:path ext:boxValue;
    form:displayType displayTypes:defaultInput;
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:boxNumber.


# Postal Code
ext:postalCode a form:Field;
    sh:name "Postal Code";
    sh:order 40;
    sh:path ext:postalcodeValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:RequiredConstraint;
        form:grouping form:Bag;
        sh:path ext:postalcodeValue;
        sh:resultMessage "Please enter a valid address."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:postalCode.


# City
ext:city a form:Field;
    sh:name "City";
    sh:order 50;
    sh:path ext:cityValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:RequiredConstraint;
        form:grouping form:Bag;
        sh:path ext:cityValue;
        sh:resultMessage "Please enter a valid city."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:city.

# Province
ext:province a form:Field;
    sh:name "Province";
    sh:order 60;
    sh:path ext:municipalityValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:RequiredConstraint;
        form:grouping form:Bag;
        sh:path ext:municipalityValue;
        sh:resultMessage "Please enter a valid province."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:province.


# Primary Phone Number
ext:primaryPhoneNumber a form:Field;
    sh:name "Primary Phone Number";
    sh:order 70;
    sh:path ext:phonenumberValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:ValidPhoneNumber;
        form:grouping form:MatchEvery;
        form:defaultCountry "BE";
        sh:path ext:phonenumberValue;
        sh:resultMessage "Please enter a valid Belgian phone number."
    ];
    form:validations [
        a form:RequiredConstraint;
        form:grouping form:Bag;
        sh:path ext:phonenumberValue;
        sh:resultMessage "Primary phone number is required."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:primaryPhoneNumber.



# Secondary Phone Number
ext:secondaryPhoneNumber a form:Field;
    sh:name "Secondary Phone Number";
    sh:order 70;
    sh:path ext:secondaryphonenumberValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:ValidPhoneNumber;
        form:grouping form:MatchEvery;
        form:defaultCountry "BE";
        sh:path ext:secondaryphonenumberValue;
        sh:resultMessage "Please enter a valid Belgian phone number."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:secondaryPhoneNumber.


# Email
ext:emailField a form:Field;
    sh:name "Email";
    sh:order 70;
    sh:path ext:emailValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:ValidEmail;
        form:grouping form:MatchEvery;
        sh:path ext:emailValue;
        sh:resultMessage "Please provide a valid email address."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:emailField.


# Website
ext:websiteField a form:Field;
    sh:name "Website";
    sh:order 70;
    sh:path ext:websiteValue;
    form:displayType displayTypes:defaultInput;
    form:validations [
        a form:UriConstraint;
        form:grouping form:MatchEvery;
        sh:path ext:websiteValue;
        sh:resultMessage "Please provide a valid URL."
    ];
    sh:group ext:contactPropertyGroup.
ext:mainFieldGroup form:hasField ext:websiteField.